<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avaliações</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Avaliações Cadastradas</h1>
        
        <% if (avaliacoes && avaliacoes.length > 0) { %>
            <div class="avaliacoes-list">
                <% avaliacoes.forEach(avaliacao => { %>
                    <div class="avaliacao-card">
                        <h3><%= avaliacao.Receitum ? avaliacao.Receitum.titulo : 'Receitum' %></h3>
                        <p><strong>Usuário:</strong> <%= avaliacao.Usuario ? avaliacao.Usuario.nome : 'Usuário' %></p>
                        <p><strong>Classificação:</strong> <%= avaliacao.nota %>/5</p>
                        <p><strong>Comentário:</strong> <%= avaliacao.comentario %></p>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="no-data">Nenhuma avaliação cadastrada.</p>
        <% } %>
        <br>
        <a href="/">Voltar ao Início</a>
    </div>
</body>
</html>