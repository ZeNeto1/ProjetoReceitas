<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Receitas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="receitas-page">
    <div class="container">
    <h1>Catálogo de Receitas</h1>
    <div class="top-actions">
        <a href="/receitas/nova" class="btn btn-cadastrar">Criar Nova Receita</a>
        <a href="/usuarios" class="btn btn-secondary" style="margin-left:10px;">Ver Usuários</a>
    </div>
    <hr>
    <div class="search-container">
        <form action="/receitas/busca" method="GET" class="search-form">
            
            <input type="text" name="termo" class="search-input" 
                   placeholder="Pesquisar por receita ou autor..." 
                   value="<%= (typeof termo !== 'undefined') ? termo : '' %>">
            
            <button type="submit" class="btn-search">Pesquisar</button>

            <% if (typeof termo !== 'undefined' && termo) { %>
                <a href="/receitas" class="btn btn-voltar">Limpar</a>
            <% } %>
        </form>
    </div>

    <% if (receitas.length === 0) { %>
        <p>Nenhuma receita cadastrada ainda.</p>
    <% } else { %>
        <ul>
            <% receitas.forEach(receita => { %>
                <li>
                    <h3><%= receita.titulo %></h3>
                    <p><em>Por: <%= receita.Usuario ? receita.Usuario.nome : 'Autor Desconhecido' %></em></p>
                    <p>Tempo: <%= receita.tempoPreparo %> min</p>
                    <p>
                    <strong>Média de avaliação:</strong> 
                    <%= receita.dataValues.mediaNotas ? Number(receita.dataValues.mediaNotas).toFixed(1) : 'Sem avaliações' %> 
                    (<%= receita.dataValues.totalAvaliacoes %> votos)
                    </p>
                    <a class="btn btn-detalhes" href="/receitas/<%= receita.id %>">Ver Detalhes</a>
                    <a class="btn btn-editar" href="/receitas/<%= receita.id %>/editar">Editar</a>

                    <form action="/receitas/<%= receita.id %>?_method=DELETE" method="POST"
                        onsubmit="return confirm('Confirma exclusão da receita <%= receita.titulo %>?');"
                        style="display:inline; margin-left:8px;">
                        <button type="submit" class="btn btn-deletar">Excluir</button>
                    </form>
                </li>
                <hr>
            <% }) %>
        </ul>
    <% } %>
    </div>
</body>
</html>